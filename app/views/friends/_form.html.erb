    <%= form.text_field :last_name, class: "form-control", placeholder:"Last name" %>
  </div>

  <div class="field">
    <% form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder:"Email" %>
  </div>

  <div class="field">
    <% form.label :phone %>
    <%= form.text_field :phone, class: "form-control", placeholder:"Phone Number" %>
  </div>

  <div class="field">
    <% form.label :linkedin %>
    <%= form.text_field :linkedin, class: "form-control", placeholder:"LinkedIn" %>
  </div>

  <div class="field">
  <% form.label :address %>
  <%= form.text_field :address, class: "form-control", placeholder:"Address" %>
  </div>

  
